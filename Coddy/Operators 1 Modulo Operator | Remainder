local playerScore = 85

-- TODO: Write your code here to calculate the remainder using modulo operator
function checkRemainder()
   remainder = playerScore % 10             -- 85 % 10 = 5 || 8 * 10 = 80 -> remainder is 5
   print(remainder)
end

-- Print the remainder
checkRemainder()

